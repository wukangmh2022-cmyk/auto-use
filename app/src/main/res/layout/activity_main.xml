<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AutoLLM Agent"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未启动"
                android:textColor="#666666"
                android:textSize="11sp" />
                
            <TextView
                android:id="@+id/tvTokenStats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Token: 0"
                android:textColor="#009688"
                android:textStyle="bold"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视觉模式:"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spVisionMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:entries="@array/vision_modes" />
    </LinearLayout>

    <Button
        android:id="@+id/btnOpenSettings"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:textSize="12sp"
        android:text="开启无障碍服务" />

    <!-- 输入区 -->
    <EditText
        android:id="@+id/etRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:hint="输入你想让手机做什么..."
        android:inputType="text"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="生成计划" />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:enabled="false"
            android:textSize="12sp"
            android:text="停止" />
            
        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:enabled="false"
            android:textSize="12sp"
            android:text="保存" />
    </LinearLayout>

    <!-- 已保存任务 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="已保存任务:"
        android:textStyle="bold"
        android:textSize="13sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">
        
        <LinearLayout
            android:id="@+id/llSavedTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <!-- 计划显示 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="执行计划:"
        android:textStyle="bold"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#E8F5E9"
        android:fontFamily="monospace"
        android:padding="6dp"
        android:text="等待生成计划..."
        android:textSize="11sp" />

    <!-- 计划操作区域 (生成后显示) -->
    <LinearLayout
        android:id="@+id/llModifyContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- 确认执行按钮 -->
        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="4dp"
            android:text="✅ 确认执行"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- 修改入口 -->
        <TextView
            android:id="@+id/btnModify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="8dp"
            android:text="✍️ 我想改一下..."
            android:textColor="#009688"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llModifyInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center_vertical">
            
            <EditText
                android:id="@+id/etModifyInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入修改意见"
                android:textSize="13sp"
                android:background="@android:drawable/edit_text" />
                
            <Button
                android:id="@+id/btnSendModify"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="发送"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 日志显示 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="执行日志:"
        android:textStyle="bold"
        android:textSize="13sp" />

    <ScrollView
        android:id="@+id/scrollLog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:background="#F5F5F5"
        android:padding="6dp">

        <TextView
            android:id="@+id/tvLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textSize="10sp" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">
        
        <Button
            android:id="@+id/btnCopyLog"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="复制日志" />
            
        <Button
            android:id="@+id/btnClearLog"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="清除日志" />
    </LinearLayout>

</LinearLayout>
